<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="yyjia_sdk_AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="yyjia_sdk_AppTheme" parent="yyjia_sdk_AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    
    <style name="yyjia_sdk_baiwenStyle">
        <item name="android:button">@color/yyjia_sdk_translate</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/yyjia_sdk_bg_tv</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/yyjia_sdk_bg_menu</item>
    </style>
    
    
    <style name="yyjia_sdk_PopupAnimation" parent="android:Animation">  
  
       <item name="android:windowEnterAnimation">@anim/yyjia_sdk_ani_in</item>  
  
       <item name="android:windowExitAnimation">@anim/yyjia_sdk_ani_out</item>  
  
    </style>  
    
    <style name="yyjia_sdk_MyAnim" parent="android:Animation">  
  
       <item name="android:windowEnterAnimation">@anim/yyjia_sdk_anim_in</item>  
  
       <item name="android:windowExitAnimation">@anim/yyjia_sdk_anim_out</item>  
  
    </style>  
</resources>
